#version 330 core
  layout(location = 0) in vec3 inPos;
  layout(location = 1) in vec3 inCol;
  layout(location = 2) in vec2 inUVCoord;
  out vec3 outPos;
  out vec3 outCol;
  out vec2 outCoords;
  uniform mat4 model;
  uniform mat4 view;
  uniform mat4 projection;

void main() {
  outCoords = inUVCoord;
  outCol = inCol;
  outPos = normalize(inPos);
  gl_Position = projection * view * model * vec4(inPos, 1.0);
  gl_Position = vec4(inPos*2.0, 1.0);
};

